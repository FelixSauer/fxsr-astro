{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "types": ["unplugin-icons/types/astro"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@data/*": ["src/data/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
      }]
  }
}